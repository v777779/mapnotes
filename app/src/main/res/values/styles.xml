<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--card-->

    <style name="Title.Card" parent="@style/TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Body.Card" parent="@style/TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Subtitle.Card" parent="@style/TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">start</item>
    </style>

    <style name="Large.Title.Card" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Large.Body.Card" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Large.Subtitle.Card" parent="@style/TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/inter_medium</item>
    </style>



    <!--add-->

    <style name="Input.Edit" parent="">
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Single.Input.Edit" parent="Input.Edit">
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="Multi.Input.Edit" parent="Input.Edit">
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>

    <!--slim-->
    <style name="Text.Edit" parent="">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="Single.Text.Edit" parent="Text.Edit">
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="Multi.Text.Edit" parent="Text.Edit">
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>


    <style name="Text.Icon" parent="@style/TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/inter</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Medium.Icon" parent="">
        <item name="android:background">@drawable/bg_white_w_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">4dp</item>
        <item name="tint">@color/black</item>
    </style>

    <!-- chip-->
    <style name="Text.Chip" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body.Chip" parent="">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipBackgroundColor">@color/chip_surface</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipIconTint">@color/chip_on_surface</item>
        <item name="chipIconEnabled">true</item>
        <item name="chipIconSize">24dp</item>
        <item name="iconStartPadding">16dp</item>
    </style>

    <style name="Action.Chip" parent="Body.Chip">
        <item name="chipBackgroundColor">@color/chip_container</item>
    </style>

    <style name="Red.Chip" parent="Body.Chip">
        <item name="chipBackgroundColor">@color/red</item>
        <item name="chipIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Large.Text.Chip" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Large.Chip" parent="">
        <item name="chipCornerRadius">24dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipIconEnabled">true</item>
        <item name="chipIconSize">24dp</item>
        <item name="iconStartPadding">16dp</item>
        <item name="iconEndPadding">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="chipMinHeight">40dp</item>
    </style>

    <style name="Red.Large.Chip" parent="Large.Chip">
        <item name="chipBackgroundColor">@color/red</item>
        <item name="chipIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Action.Large.Chip" parent="Large.Chip">
        <item name="chipBackgroundColor">@color/chip_container</item>
        <item name="chipIconTint">@color/chip_on_surface</item>
        <item name="android:textColor">@color/chip_on_surface</item>
    </style>

    <style name="Play.Large.Chip" parent="Large.Chip">
        <item name="chipBackgroundColor">@color/chip_surface</item>
        <item name="chipIconTint">@color/chip_on_surface</item>
        <item name="android:textColor">@color/chip_on_surface</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!--button-->
    <style name="Text.Large.Button" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/chip_on_surface</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Image.Large.Button" parent="">
        <item name="tint">@color/chip_on_surface</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Layout.Large.Button" parent="">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Action.Layout.Large.Button" parent="Layout.Large.Button">
        <item name="android:background">@drawable/bg_action_w_ripple</item>
    </style>

    <style name="Play.Layout.Large.Button" parent="Layout.Large.Button">
        <item name="android:background">@drawable/bg_play_w_ripple</item>
    </style>

    <style name="Single.Large.Button" parent="Text.Large.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center</item>

        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Action.Single.Large.Button" parent="Single.Large.Button">
        <item name="android:background">@drawable/bg_action_w_ripple</item>
    </style>

    <style name="Play.Single.Large.Button" parent="Single.Large.Button">
        <item name="android:background">@drawable/bg_play_w_ripple</item>
    </style>

    <style name="Red.Text.Large.Button" parent="Text.Large.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Red.Image.Large.Button" parent="Image.Large.Button">
        <item name="tint">@color/white</item>
    </style>

    <style name="Red.Single.Large.Button" parent="Single.Large.Button">
        <item name="android:background">@drawable/bg_red_w_ripple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Red.Layout.Large.Button" parent="Layout.Large.Button">
        <item name="android:background">@drawable/bg_red_w_ripple</item>
    </style>



    <style name="Round.Image" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Small.Round.Image" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <!--auth-->

    <!--text-->
    <style name="Title.Text" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/on_surface_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Large.Title.Text" parent="Title.Text">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Body.Text" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/on_surface_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <!--impact-->
    <style name="Impact.Body.Text" parent="Body.Text">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <!--        <item name="android:autoLink">all</item>-->
        <!--        <item name="android:linksClickable">false</item>-->
        <!--        <item name="android:selectAllOnFocus">false</item>-->
    </style>

    <style name="Normal.Impact.Text" parent="Impact.Body.Text">
        <item name="android:textColor">@color/impact</item>
    </style>

    <style name="Heavy.Impact.Text" parent="Impact.Body.Text">
        <item name="android:textColor">@color/heavy_impact</item>
    </style>

    <style name="Light.Impact.Text" parent="Impact.Body.Text">
        <item name="android:textColor">@color/light_impact</item>
    </style>

    <style name="Divider.Impact.Text" parent="Light.Impact.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <!--button-->
    <style name="Button.Body.Text" parent="Body.Text">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="iconSize">22dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Red.Button.Body.Text" parent="Button.Body.Text">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Action.Button.Body.Text" parent="Button.Body.Text">
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="Login.Red.Button" parent="Red.Button.Body.Text">
        <item name="icon">@drawable/baseline_login_24</item>
    </style>

    <style name="Confirm.Red.Button" parent="Red.Button.Body.Text">
        <item name="icon">@drawable/baseline_file_download_done_24</item>
    </style>

    <style name="Logout.Button.Body.Text" parent="Button.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/gray_resend_back</item>
        <item name="icon">@drawable/baseline_logout_24</item>
    </style>

    <!--icon-->
    <style name="BackArrow.Icon" parent="">
        <item name="android:src">@drawable/baseline_arrow_back_24</item>
        <item name="android:background">@drawable/bg_surface_w_ripple</item>
        <item name="tint">@color/on_surface_color</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AccountIcon">
        <item name="android:src">@drawable/baseline_person_outline_24</item>
        <item name="android:background">@drawable/bg_gray_w_ripple
        </item>
        <item name="tint">@color/on_surface_color</item>
    </style>


    <!--bottom-->

    <style name="Active.Bottom" parent="">
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="Inactive.Bottom" parent="">
        <item name="fontFamily">@font/inter_light</item>
    </style>

</resources>