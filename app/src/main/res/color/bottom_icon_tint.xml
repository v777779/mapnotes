    <!-- Active item -->
    <item android:color="?attr/bottom_icon_tint" android:state_pressed="true" android:state_checked="true"/>
    <item android:color="?attr/bottom_icon_tint" android:state_focused="true" android:state_checked="true"/>
    <item android:color="?attr/bottom_icon_tint" android:state_hovered="true" android:state_checked="true"/>
    <item android:color="?attr/bottom_icon_tint" android:state_checked="true"/>

    <!-- Inactive item -->
    <item android:color="?attr/bottom_icon_tint_inactive" android:state_pressed="true"/>
